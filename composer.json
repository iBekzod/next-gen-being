{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "ibekzod/nextgenbeing-blog",
    "type": "project",
    "description": "NextGenBeing - Professional blog platform with AI, subscriptions, and advanced content management",
    "keywords": ["laravel", "blog", "filament", "livewire", "lemonsqueezy", "ai", "postgresql"],
    "license": "MIT",
    "homepage": "https://nextgenbeing.com",
    "authors": [
        {
            "name": "iBekzod",
            "homepage": "https://github.com/iBekzod"
        }
    ],
    "require": {
        "php": "^8.4",
        "awcodes/filament-tiptap-editor": "^3.5",
        "filament/filament": "^3.3",
        "guzzlehttp/guzzle": "^7.2",
        "intervention/image": "^3.0",
        "lemonsqueezy/laravel": "^1.0",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.0",
        "laravel/scout": "^10.0",
        "laravel/tinker": "^2.10.1",
        "laravel/ui": "^4.6",
        "league/commonmark": "^2.4",
        "livewire/livewire": "^3.0",
        "meilisearch/meilisearch-php": "^1.0",
        "spatie/laravel-backup": "^9.0",
        "spatie/laravel-medialibrary": "^11.0",
        "spatie/laravel-schedule-monitor": "^3.0",
        "spatie/laravel-sitemap": "^7.0",
        "spatie/laravel-sluggable": "^3.5",
        "symfony/dom-crawler": "^7.0",
        "symfony/http-kernel": "*"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "phpunit/phpunit": "^11.5.3",
        "spatie/laravel-ignition": "^2.0",
        "barryvdh/laravel-debugbar": "^3.9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ],
        "setup-blog": [
            "composer install --optimize-autoloader",
            "npm install",
            "@php artisan migrate:fresh --seed",
            "@php artisan storage:link",
            "@php artisan scout:import App\\Models\\Post",
            "@php artisan sitemap:generate",
            "npm run build"
        ],
        "production-deploy": [
            "composer install --no-dev --optimize-autoloader",
            "@php artisan migrate --force",
            "@php artisan config:cache",
            "@php artisan route:cache",
            "@php artisan view:cache",
            "@php artisan sitemap:generate",
            "@php artisan backup:run"
        ],
        "fresh-install": [
            "@setup-blog",
            "@php artisan make:filament-user"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
